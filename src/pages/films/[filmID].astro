---
import Head from "../../components/core/head.astro";
import Navbar from "../../components/core/navbar.astro";
import RightNav from "../../components/core/rightNav.astro";
import SearchNav from "../../components/core/searchNav";
import ContainerMovieCard2 from "../../components/containerMovieCard2.astro";
import MovieCard2 from "../../components/movieCard2.astro";
import MovieActions from "../../components/movieActions";
import { MongoDB } from "../../lib/mongodb";

const { filmID } = Astro.params;
const dataFilm = await new MongoDB("films").searchByID(filmID);
const topFilms = await new MongoDB("films").getTopFilms();

const { userData } = Astro.locals;

// check Like & Playlist
const isSaved = (await new MongoDB("playlists").searchLike_Playlist_ByID(userData._id.toString(), filmID?.toString())) ? true : false;
const isLiked = (await new MongoDB("likes").searchLike_Playlist_ByID(userData._id.toString(), filmID?.toString())) ? true : false;
---

<!doctype html>
<html lang="id-ID">
  <head>
    <Head title={`${dataFilm?.judul} - UrEyes`} />
  </head>
  <body class="scroll-smooth bg-linear-to-b from-bg-top to-bg-btm min-h-screen flex flex-col">
    <Navbar>
      <RightNav>
        <SearchNav client:load />
      </RightNav>
    </Navbar>

    <main>
      <div class="relative w-full">
        <!-- Content Container -->
        <div class="relative z-10 max-w-7xl mx-auto px-4 pt-32 pb-10">
          <div class="flex flex-col md:flex-row gap-0 lg:gap-10 items-center">
            <!-- Poster Image (Vertical) -->
            <div class="w-full max-w-[300px] shrink-0 mx-auto md:mx-0 shadow-2xl shadow-bg-top/20 rounded-xl overflow-hidden border border-white/10">
              <img src={dataFilm?.bannerUri} alt="Poster" class="w-full h-auto" />
            </div>

            <!-- Info Column -->
            <div class="grow pt-4">
              <!-- Title & Year -->
              <h1 class="text-4xl md:text-6xl font-bold mb-2 leading-tight text-transparent bg-clip-text bg-linear-to-r from-bg-top to-white">{dataFilm?.judul} <span class="text-2xl text-gray-400 font-normal">({dataFilm?.tahun})</span></h1>

              <!-- Metadata Row -->
              <div class="flex flex-wrap items-center gap-4 text-sm text-gray-300 mb-6 pt-2">
                {dataFilm?.genre.map((data: string) => <span class="bg-white/10 px-3 py-1 rounded-full border border-white/10">{data}</span>)}

                <span class="flex items-center gap-1 text-yellow-400 font-bold">
                  <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20"
                    ><path
                      d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                    ></path></svg
                  >
                  {dataFilm?.rating} / 10
                </span>
              </div>

              <!-- Synopsis -->
              <h3 class="text-bg-top shadow-bg-top font-bold text-lg mb-2">Sinopsis</h3>
              <p class="text-gray-300 leading-relaxed max-w-3xl mb-8">
                {dataFilm?.deskripsi}
              </p>

              <!-- Action Buttons -->
              <MovieActions client:load userID={userData._id.toString()} filmID={filmID?.toString()} initialLiked={isLiked} initialSaved={isSaved} />
            </div>
          </div>
          <div class="pt-8">
            <ContainerMovieCard2 title="Populer Saat Ini">
              {topFilms?.map((data) => <MovieCard2 data={data} />)}
            </ContainerMovieCard2>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
